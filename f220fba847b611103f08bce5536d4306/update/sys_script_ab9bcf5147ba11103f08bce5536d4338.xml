        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var gr = new GlideRecord('x_922204_ptaskmgr_personal_task');
	gr.addQuery('parent', current.sys_id);
	gr.query();
	if (!gr.next())
		return;
	var count = 0;
	do {
		if (parseInt(gr.getValue('state')) < 3)
			count++;
	} while (gr.next());
	if (count == 0)
		return;
	if (count == 1)
		gs.addErrorMessage('Cannot ' + ((parseInt(current.getValue('state')) == 3) ? 'close' : 'cancel') + ' task: There is still an open dependent task.');
	else
		gs.addErrorMessage('Cannot ' + ((parseInt(current.getValue('state')) == 3) ? 'close' : 'cancel') + ' task: There are still ' + count + ' open dependent tasks.');

	current.setAbortAction(true);
})(current, previous);]]></script>
