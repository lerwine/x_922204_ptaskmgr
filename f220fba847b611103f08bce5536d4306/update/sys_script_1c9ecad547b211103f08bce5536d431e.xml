        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var parentElement = current.getElement('parent');
	if (gs.nil(parentElement))
		return;
	var gr = element.getRefRecord();
	var parentState = parseInt(gr.getValue('state'));
	if (parentState > 2 && parseInt(current.getValue('state')) < 3) {
		parentElement.setError('Parent task cannot be in a completed or canceled state unless the current task is completed or canceled.');
		current.setAbortAction(true);
		return;
	}
	var sys_id = current.getValue('sys_id');
	var element = parentElement;
	do {
		gr = element.getRefRecord();
		if (gr.getValue('sys_id') == sys_id) {
			parentElement.setError('Parent task cannot be a descendant of the current task.');
			current.setAbortAction(true);
			return;
		}
		element = gr.getElement('parent');
	} while (!gs.nil(element));

})(current, previous);]]></script>
